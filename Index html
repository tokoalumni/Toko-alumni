let totalItem = 0;
const daftarKeranjang = document.getElementById("daftar-keranjang");

function login() {
  const user = document.getElementById("username").value;
  const pass = document.getElementById("password").value;
  const status = document.getElementById("login-status");

  if (user === "komunitas" && pass === "1234") {
    status.textContent = "Login berhasil!";
    status.style.color = "green";
  } else {
    status.textContent = "Login gagal. Coba lagi.";
    status.style.color = "red";
  }
}

function tambahKeKeranjang(namaProduk) {
  const item = document.createElement("li");
  item.textContent = namaProduk;
  daftarKeranjang.appendChild(item);
  totalItem++;
  document.getElementById("total-item").textContent = totalItem;
}

function checkout() {
  const info = document.getElementById("checkout-info");
  if (totalItem > 0) {
    info.textContent = "Silakan transfer ke rekening komunitas: 123-456-7890 (Bank Komunitas)";
  } else {
    info.textContent = "Keranjang kosong!";
  }
}

function tambahProduk() {
  const nama = document.getElementById("nama-produk").value;
  const harga = document.getElementById("harga-produk").value;
  const gambar = document.getElementById("gambar-produk").value;
  const status = document.getElementById("admin-status");

  if (nama && harga && gambar) {
    const produkBaru = document.createElement("div");
    produkBaru.className = "produk";
    produkBaru.innerHTML = `
      <img src="${gambar}" alt="${nama}" />
      <h2>${nama}</h2>
      <p>Rp${harga}</p>
      <button onclick="tambahKeKeranjang('${nama}')">Beli</button>
    `;
    document.querySelector(".produk-container").appendChild(produkBaru);
    status.textContent = "Produk berhasil ditambahkan!";
    status.style.color = "green";
  } else {
    status.textContent = "Mohon isi semua kolom.";
    status.style.color = "red";
  }
}
